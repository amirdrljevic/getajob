<%= form_for [@job, @application] do |form| %>
  <% if application.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(application.errors.count, "error") %> prohibited this application from being saved:</h2>

      <ul>
        <% application.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row mb-3">
    <%= form.label :user_id, class:"col-sm-2 col-form-label"  %>
    <div class="col-sm-10">
      <%= form.text_field :user_id, class:"form-control" %>
    </div>
  </div>

  <div class="row mb-3">
    <%= form.label :job_id, class:"col-sm-2 col-form-label"  %>
    <div class="col-sm-10">
      <%= form.text_field :job_id, class:"form-control" %>
    </div>
  </div>

  <div class="row mb-3">
    <%= form.label :cover_letter, class:"col-sm-2 col-form-label"  %>
    <div class="col-sm-10">
      <%= form.text_area :cover_letter, class:"form-control" %>
    </div>      
  </div>

  <div class="row mb-3">
    <%= form.label :education, class:"col-sm-2 col-form-label"  %>
    <div class="col-sm-10">
      <%= form.text_field :education, class:"form-control" %>
    </div>
  </div>

  <div class="row mb-3">
    <%= form.label :telephone, class:"col-sm-2 col-form-label"  %>
    <div class="col-sm-10">
      <%= form.text_field :telephone, class:"form-control" %>
    </div>
  </div>

  <div class="row mb-3">
    <%= form.label :date_of_birth, class:"col-sm-2 col-form-label"  %>
    <div class="col-sm-10">
      <%= form.date_select :date_of_birth, class:"form-control" %>
    </div>
  </div>

  <div class="row mb-3">
    <%= form.label :address, class:"col-sm-2 col-form-label"  %>
    <div class="col-sm-10">
      <%= form.text_field :address, class:"form-control" %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit :class => 'btn btn-primary' %>
  </div>
<% end %>
