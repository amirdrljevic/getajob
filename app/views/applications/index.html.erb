<p id="notice"><% notice %></p>

<h1><%= t 'applications.index.title' %></h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Rb</th>    
      <th scope="col">Job post</th>
      <th scope="col">Company</th>
      <th scope="col">Telephone</th>
      <th scope="col">Date of birth</th>
      <th scope="col">Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @applications.each.with_index(1) do |application, index| %>
      <tr>
        <td><%= index %></td>      
        <td><%= application.job.title %></td>
        <td><%= application.job.user.company_name %></td>
        <td><%= application.telephone %></td>
        <td><%= application.date_of_birth %></td>
        <td><%= application.address %></td>
        <td><%= link_to 'Show', job_application_path(job_id: application.job.id, id: application.id) %></td>
        <td><%= link_to 'Edit', edit_job_application_path(job_id: application.job.id, id: application.id) %></td>
        <td><%= link_to 'Destroy', job_application_path(job_id: application.job.id, id: application.id), method: :delete, data: { confirm: 'Are you sure?' } %></td> 
      </tr>
    <% end %>
  </tbody>
</table>

<br>

