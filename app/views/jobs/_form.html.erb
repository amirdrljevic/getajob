<form>
  <%= form_with(model: job) do |form| %>
    <% if job.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(job.errors.count, "error") %> prohibited this job from being saved:</h2>

        <ul>
          <% job.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row mb-3">
      <%= form.label :title, class:"col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= form.text_field :title, class:"form-control" %>
      </div>
    </div>  

    <div class="row mb-3">
      <%= form.label :description, class:"col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= form.text_area :description, class:"form-control", rows: 7 %>
      </div>
    </div>  

    <div class="row mb-3">
      <%= form.label :category_id, class:"col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= form.text_field :category_id, class:"form-control" %>
      </div>
    </div>  

    <div class="field">
      <%= form.label :user_id %>
      <%= form.text_field :user_id %>
    </div>

    <div class="row mb-3">
      <%= form.label :valid_until, class:"col-sm-2 col-form-label" %>
      <div class="col-sm-2">
        <%= form.date_field :valid_until, class:"form-control" %>
      </div>
    </div>  

    <div class="actions">
      <%= form.submit t('jobs.form.submit_button'), :class => 'btn btn-primary' %>
    </div>
  <% end %>  
</form>
<br/>